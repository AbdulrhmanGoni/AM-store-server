{
  "name": "am-store-api",
  "version": "1.0.0",
  "description": "The server side (API) of AM-Store project",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon --legacy-watch src/server.js",
    "docker-dev": "docker-compose -f docker-compose-dev.yml up -d",
    "docker-test": "docker-compose -f docker-compose-test.yml up -d",
    "docker-prod": "docker-compose -f docker-compose-prod.yml up -d",
    "testing-db": "bash ./scripts/mongodb-replicas-start.sh",
    "jest": "node ./scripts/jest-runner-script.js",
    "test": "npm run testing-db && npm run jest",
    "create-coverage-badges": "coverage-badges"
  },
  "keywords": [
    "AM",
    "AM-Store",
    "Store",
    "Anime",
    "Manga",
    "API"
  ],
  "author": "Abdulrhman Goni",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.1.4",
    "express-xss-sanitizer": "^1.1.6",
    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.1",
    "mongoose": "^7.0.4",
    "nodemailer": "^6.9.2",
    "redis": "^4.6.13"
  },
  "devDependencies": {
    "@actions/core": "^1.10.1",
    "coverage-badges-cli": "^2.0.0",
    "env-cmd": "^10.1.0",
    "eventsource": "^2.0.2",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "supertest": "^6.3.4"
  },
  "type": "module"
}